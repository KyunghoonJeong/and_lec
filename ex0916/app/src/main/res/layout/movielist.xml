<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#A6FFFFFF">

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#EEFF41"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="순 위"
        android:textColor="#C92B2A2A"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_movieNm"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="#A6FFFFFF"
        android:fontFamily="@font/aldrich"
        android:gravity="center_vertical"
        android:paddingLeft="20sp"
        android:paddingBottom="10sp"
        android:text="영화 제목"
        android:textColor="#C92B2A2A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_rank"
        app:layout_constraintTop_toBottomOf="@+id/tv_rankOldAndNew" />

    <TextView
        android:id="@+id/tv_audiAcc"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:background="#A6FFFFFF"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="0명"
        android:textColor="#C92B2A2A"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/sss"
        app:layout_constraintTop_toBottomOf="@+id/tv_movieNm" />

    <TextView
        android:id="@+id/sss"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:background="#EEFF41"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="관객수"
        android:textColor="#C92B2A2A"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rank"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dd"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:background="#EEFF41"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="개봉일자"
        android:textColor="#C92B2A2A"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_audiAcc"
        app:layout_constraintTop_toBottomOf="@+id/tv_movieNm" />

    <TextView
        android:id="@+id/tv_openDt"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#A6FFFFFF"
        android:fontFamily="@font/aldrich"
        android:gravity="left"
        android:paddingLeft="5sp"
        android:text=" 0000-00-00"
        android:textColor="#C92B2A2A"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dd"
        app:layout_constraintTop_toTopOf="@+id/dd" />

    <TextView
        android:id="@+id/tv_rankOldAndNew"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="#A6FFFFFF"
        android:fontFamily="@font/aldrich"
        android:gravity="center_vertical"
        android:paddingLeft="15sp"
        android:text="최신여부"
        android:textColor="#C9F75037"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tv_rank"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>